<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="20dp"
              android:orientation="vertical">

    <TextView
            android:id="@+id/biometric_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Label"
            android:layout_margin="8dp"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:orientation="horizontal">

        <ImageButton
                android:text="@string/left_slab"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/rcapture_left_slab" />

        <ImageButton
                android:text="@string/right_slab"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/rcapture_right_slab" />

        <ImageButton
                android:text="@string/thumbs"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/rcapture_thumbs" />

        <ImageButton
                android:text="@string/double_iris"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/rcapture_iris" />

        <ImageButton
                android:text="@string/face"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/rcapture_face" />

    </LinearLayout>
</LinearLayout>